<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
		<field name="title" type="text"
			   label="JGLOBAL_TITLE"
			   description="JFIELD_TITLE_DESC"
			   class="input-xxlarge input-large-text"
			   size="40"
			   translate_required="true"/>
		<field name="introtext" type="textarea"
			   label="COM_SWJPROJECTS_PROJECT_INTROTEXT"
			   hint="COM_SWJPROJECTS_PROJECT_INTROTEXT"
			   filter="JComponentHelper::filterText"
			   rows="5"
			   class="span12"/>
		<field name="fulltext" type="editor"
			   label="COM_SWJPROJECTS_PROJECT_FULLTEXT"
			   filter="JComponentHelper::filterText"/>
	</fieldset>
	<fieldset name="images" label="COM_SWJPROJECTS_IMAGES">
		<fields name="images">
			<field name="icon" type="media"
				   label="COM_SWJPROJECTS_IMAGES_ICON"/>
			<field name="cover" type="media"
				   label="COM_SWJPROJECTS_IMAGES_COVER"/>
			<field name="gallery" type="subform"
				   label="COM_SWJPROJECTS_IMAGES_GALLERY"
				   multiple="true">
				<form>
					<field name="image" type="media" label="COM_SWJPROJECTS_IMAGES_IMAGE"/>
					<field name="text" type="text" label="COM_SWJPROJECTS_IMAGES_TEXT"/>
				</form>
			</field>
		</fields>
	</fieldset>
</form>